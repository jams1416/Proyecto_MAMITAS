export 'check_in_model.dart'; // Exportación del modelo para ser usado en otras partes de la aplicación.

class CheckInWidget extends StatefulWidget {
  const CheckInWidget({super.key}); // Constructor de la clase.

  @override
  State<CheckInWidget> createState() => _CheckInWidgetState(); // Crea el estado asociado al widget.
}

class _CheckInWidgetState extends State<CheckInWidget> {
  late CheckInModel _model; // Declaración tardía del modelo.

  final scaffoldKey = GlobalKey<ScaffoldState>(); // Clave global para el Scaffold.

  @override
  void initState() {
    super.initState();
    _model = createModel(context, () => CheckInModel()); // Inicializa el modelo.

    // Acción a realizar al cargar la página.
    SchedulerBinding.instance.addPostFrameCallback((_) async {
      _model.create = false; // Inicializa la variable create en falso.
      setState(() {}); // Actualiza el estado.
    });

    // Inicialización de los controladores y nodos de enfoque.
    _model.nameTextController ??= TextEditingController();
    _model.nameFocusNode ??= FocusNode();

    _model.emailTextController ??= TextEditingController();
    _model.emailFocusNode ??= FocusNode();

    _model.passwordTextController ??= TextEditingController();
    _model.passwordFocusNode ??= FocusNode();

    _model.password2TextController ??= TextEditingController();
    _model.password2FocusNode ??= FocusNode();

    WidgetsBinding.instance.addPostFrameCallback((_) => setState(() {})); // Asegura que el estado se actualice al iniciar.
  }

  @override
  void dispose() {
    _model.dispose(); // Limpia los recursos utilizados por el modelo.
    super.dispose();
  }

